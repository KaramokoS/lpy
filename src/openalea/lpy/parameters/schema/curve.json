{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "curve",
    "anyOf": [
        {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[^\\d\\W]\\w*\\Z"
                },
                "type": {
                    "enum": ["NurbsCurve2D"]
                },
                "points": {
                    "$ref": "point3array.json"
                },
                "degree": {
                    "type": "number",
                    "minimum": 1
                },
                "is_function": {
                    "type": "boolean"
                }
            },
            "required": ["name", "type", "points", "is_function"],
            "additionalProperties": false
        },
        {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[^\\d\\W]\\w*\\Z"
                },
                "type": {
                    "enum": ["BezierCurve2D"]
                },
                "points": {
                    "$ref": "point3array.json"
                },
                "is_function": {
                    "type": "boolean"
                }
            },
            "required": ["name", "type", "points"],
            "additionalProperties": false
        },
        {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[^\\d\\W]\\w*\\Z"
                },
                "type": {
                    "enum": ["Polyline2D"]
                },
                "points": {
                    "$ref": "point2array.json"
                },
                "is_function": {
                    "type": "boolean"
                }
            },
            "required": ["name", "type", "points"],
            "additionalProperties": false
        }
    ]
}
