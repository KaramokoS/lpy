{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "L-Py",
    "type": "object",
    "required": [
        "schema",
        "version",
        "options",
        "parameters",
        "materials"
    ],
    "properties": {
        "schema": {
            "enum": ["lpy"]
        },
        "version": {
            "type": "string"
        },
        "animation_timestep": {
            "type": "number",
            "minimum" : 0
        },
        "options": {
            "$ref": "options.json"
        },
        "parameters": {
            "type": "array",
            "items": {
                "$ref": "category.json"
            }
        },
        "materials": {
            "type": "array",
            "items": {
                "$ref": "appearance.json"
            }
        },
        "credits" : {
            "$ref": "credits.json"            
        }
    }
}
