{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "patch",
    "anyOf": [
        {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[^\\d\\W]\\w*\\Z"
                },
                "type": {
                    "enum": ["NurbsPatch"]
                },
                "points": {
                    "$ref": "point4matrix.json"
                },
                "udegree": {
                    "type": "number",
                    "minimum": 1
                },
                "vdegree": {
                    "type": "number",
                    "minimum": 1
                },
                "uknotList": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "number"
                    }
                },
                "vknotList": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": ["name", "type", "points","udegree","vdegree"],
            "additionalProperties": false
        },
        {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[^\\d\\W]\\w*\\Z"
                },
                "type": {
                    "enum": ["BezierPatch"]
                },
                "points": {
                    "$ref": "point4matrix.json"
                }
            },
            "required": ["name", "type", "points"],
            "additionalProperties": false
        }
    ]
}
